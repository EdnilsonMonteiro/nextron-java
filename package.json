{
  "private": true,
  "name": "poc-biometria-digital",
  "description": "Teste para nova biometria digital",
  "version": "1.0.9",
  "author": "Ednilson Monteiro",
  "main": "app/background.js",
  "scripts": {
    "dev": "nextron",
    "build": "nextron build",
    "postinstall": "electron-builder install-app-deps",
    "publish": "node publish.js"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "dotenv": "^16.4.5",
    "electron-serve": "^1.3.0",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.2.1",
    "java-bridge": "^2.6.0"
  },
  "devDependencies": {
    "@chakra-ui/icons": "^2.1.1",
    "@chakra-ui/react": "^2.8.2",
    "@chakra-ui/theme-tools": "^2.1.2",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.52",
    "electron": "^29.3.0",
    "electron-builder": "^24.13.3",
    "framer-motion": "^11.0.28",
    "next": "^13.5.6",
    "nextron": "^8.15.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.4.5"
  },
  "build": {
    "appId": "com.example.app",
    "productName": "POC Biometria Digital",
    "copyright": "Copyright Â© 2024 Ednilson Monteiro",
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    },
    "files": [
      {
        "from": ".",
        "filter": [
          "assets/**",
          "package.json",
          "app/**"
        ]
      }
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "publish": [
      {
        "provider": "generic",
        "url": "https://github.com/EdnilsonMonteiro/nextron-java/releases/latest"
      }
    ],
    "win": {
      "target": "nsis",
      "publish": [
        {
          "provider": "github",
          "owner": "EdnilsonMonteiro",
          "repo": "nextron-java",
          "releaseType": "release"
        }
      ]
    }
  }
}
